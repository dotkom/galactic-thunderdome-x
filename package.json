    "nodemon": "^2.0.15",
    "prettier": "^2.6.1",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "tsc-watch": "^5.0.3",
    "tsconfig-paths": "^3.14.1",
    "turbo": "^1.2.0",
    "typescript": "^4.6.3"
